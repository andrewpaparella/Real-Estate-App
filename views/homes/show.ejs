<%- include('../partials/header') %>
<h1>Home Details</h1>
<section id="show-home">
    <div class="row">
        <div class="col-sm">Address: <%= home.address%> </div>
        <div class="col-sm">City: <%= home.city %> </div>
        <div class="col-sm">State: <%= home.state %> </div>
        <div class="col-sm">Price: $<%= home.price %> </div>
        <div class="col-sm">Square Feet: <%= home.squareFeet %> </div>
        <div class="col-sm">Bathrooms: <%= home.bathrooms %> </div>
        <div class="col-sm">Bedrooms: <%= home.bedrooms %> </div>
        <div class="col-sm">Year Built: <%= home.yearBuilt %> </div>
        <div class="col-sm">LotSize: <%= home.lotsize %> </div>
        <div class="col-sm">Number of Stories: <%= home.numberOfStories %> </div>
        <div class="col-sm">Days on Market: <%= home.daysOnMarket %> </div>
        <div class="col-sm">Pool: <%= home.pool ? "Yes" : "Nope" %> </div>
    </div>
</section>
<main>
    <form action="/homes/<%= home._id%>?_method=delete" method="POST" class="delete-home-form">
    <div>Delete Home Listing</div>
    <button type="submit">X</button>
    </form>
    <form action="/homes/<%= home._id%>/edit">
    <button type="submit">Click to edit Home Listing</button>
    </form>
    <h1 class="text-center">Realtors</h1>
  <div class="blog">
    <div class="container">
      <div class="row">
        <% realtor.realtor.forEach(function(r) { %>
          <div class="col-md-4 col-lg-4 col-sm-12">
            <div class="card">
              <div class="card-img">
                <!-- <img src="/headerback.jpeg" class="img-fluid"> -->
              </div>
              <div class="card-body">
                  <h4 class="card-title"><%= r.name %></h4>
                  <p class="card-text">
                    <br>Email: <%= r.email %></br>
                    <br>Phone Number: #<%= r.phoneNumber %></br>
                    <br>Company: <%= r.company %></br>
                  </p>
                </div>
              <div class="card-footer">
                  <a class="card-link" href="/realtors/<%= r._id %>">DETAILS</a></br>
                </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</main>  

<section id="home-realtor">

</section>


<%- include('../partials/footer') %>